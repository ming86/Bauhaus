@model Bauhaus.Models.UserProfile

<h3 class="text-info">Edit Profile</h3>

@using (Html.BeginForm("SaveProfile", "Account"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <form role="form">
        @Html.HiddenFor(m=>m.UserId)
        <div class="form-group">
            @Html.LabelFor(m => m.FullName)<br />
            @Html.EditorFor(m => m.FullName)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email)<br />
            @Html.EditorFor(m => m.Email)
        </div>
        <button class="btn btn-primary" type="submit">Save Profile</button>
    </form>
}

<script>
    $(function () {
        if('@Model.Active' == 'True')
        {
            $("#status").text("Active");
            $("#bulb").addClass("text-success");
        }
        else
        {
            $("#status").text("Disabled");
        }
    });
</script>
