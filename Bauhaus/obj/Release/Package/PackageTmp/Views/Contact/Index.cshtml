@using GridMvc
@using GridMvc.Filtering
@using GridMvc.Html
@using GridMvc.Sorting
@model IEnumerable<Bauhaus.Models.Contact>

@{
    ViewBag.Title = "Contact List";
}
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <button class="btn btn-default" type="button" data-toggle="modal" data-target="#createModal">
                Create Contact <i class="fa fa-user fa-x2"></i>
            </button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10">
            @Html.Grid(Model).Named("ContactGrid").Columns(columns =>
           {
               columns.Add(item => item.Area);
               columns.Add(item => item.Name);
               columns.Add(item => item.Telephone);
               columns.Add(item => item.Email);
               columns.Add()
                   .Titled("Edit/Del")
                   .Sanitized(false)
                   .Encoded(false)
                   .RenderValueAs(o=>
                       @<div id="@o.ID">
                            <button type="button" class="btn btn-sm btn-default editContact" data-toggle="modal" data-target="#editModal"><i class="fa fa-edit fa-x2"></i></button>
                            <button type="button" class="btn btn-sm btn-default deleteContact" data-toggle="modal" data-target="#deleteModal"><i class="fa fa-times fa-x2"></i></button>
                        </div>
                   );
           }).SetLanguage("En").WithPaging(15).Sortable().Filterable().WithMultipleFilters().Selectable(false)
        </div>
    </div>
</div>
<!-- Create Contact Modal -->
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="createContactLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="CreateContactLabel"><i class="fa fa-edit fa-x2"></i> Edit Contact</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group">
                        <label>Name</label><br />
                        <input type="text" id="createName" />
                    </div>
                    <div class="form-group">
                        <label>Tel.</label><br />
                        <input type="tel" id="createTelephone" />
                    </div>
                    <div class="form-group">
                        <label>Email</label><br />
                        <input type="email" id="createEmail" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

