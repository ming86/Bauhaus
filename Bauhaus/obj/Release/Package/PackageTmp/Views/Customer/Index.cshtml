@using GridMvc
@using GridMvc.Filtering
@using GridMvc.Html
@using GridMvc.Sorting
@model IEnumerable<Bauhaus.Models.Customer>

<div class="row">
    <div class="col-md-4 col-md-offset-9">
        <div class="panel panel-primary" id="details" style="max-width:270px">
            <div class="panel-heading">
                <h3 class="panel-title" style="color:white"><strong>Customer Details</strong></h3>
            </div>
            <div class="panel-body"  id="customer-content">
                <p class="muted">
                        Select customer to display detailed infomation
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        @Html.Partial("_CustomersGrid", Model) @* configure grid in a partial view *@
    </div>
</div>
<script>

    $(function () {
        pageGrids.customersGrid.onRowSelect(function (e) {
            $.post("/Customer/GetCustomer?id=" + e.row.ID, function (data) {
                if (data.Status <= 0) {
                    alert(data.Message);
                    return;
                }
                $("#customer-content").html(data.Content);
            });
        });
    });
    
</script>
