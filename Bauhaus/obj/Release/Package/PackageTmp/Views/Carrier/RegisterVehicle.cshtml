@model long

<h2>Register Vehicle</h2>

<div class="row">
    <div class="col-md-6">

        @using (Html.BeginForm("RegisterVehicle","Carrier")) {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <input type="hidden" name="shipmentNumber" value="@Model" />
            <label>Vehicle Plate</label><br />
            <input type="text" name="plate" style="margin-bottom:10px; width:100px" /> <br />
            <label>Vehicle Type</label> <br />
            <select name="type" style="margin-bottom:10px">
                <option value="VE01">VE01</option>
                <option value="VE02">VE02</option>
                <option value="VE03">VE03</option>
                <option value="VE04">VE04</option>
                <option value="VE05">VE05</option>
            </select> <br />
            <label>Driver's Name</label> <br />
            <input type="text" name="driversName" style="margin-bottom:10px; width:180px" placeholder="Firt Name & Last Name" /> <br />
            <label>Driver's Telephone</label> <br />
            <input type="text" name="driversTelephone" style="margin-bottom:10px; width:130px" placeholder="(XXXX)-XXX-XXXX" /> <br />
            <button class="btn btn-default" type="submit"> Register & Assign</button>
        }
        
    </div>
</div>